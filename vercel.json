{
    "version": 2,
    "builds": [
        {
            "src": "seniorcare/wsgi.py",
            "use": "@vercel/python",
            "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
        },
        {
            "src": "staticfiles_build",
            "use": "@vercel/static-build",
            "config": { "distDir": "staticfiles_build" }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/staticfiles_build/$1"
        },
        {
            "src": "/(.*)",
            "dest": "seniorcare/wsgi.py"
        }
    ]
}
